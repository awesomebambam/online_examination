<h1>Listing Users</h1>

  <table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @test_users.each do |test_user| %>
      <tr>
        <td><%= test_user.email %></td>
        <% test_user.role = "Tutor" if test_user.role == "admin" %>
        <td><%= test_user.role %></td>
        <td><%= link_to 'Show', test_user_path(test_user) %></td>
        <td><%= link_to 'Edit', edit_test_user_path(test_user) %></td>
        <td><%= link_to 'Destroy', "/test_users/#{test_user.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button>
  <%= link_to 'New Test user', new_test_user_path %>
</button>
