<h1>Listing questions</h1>

<% n = 0 %>
<% @exam.questions.each do |question| %>
  <%  n = n+1 %>
  <p><% @question = question %>
<strong><%= n %>. Title:</strong>
  <%= simple_format(@question.title) %>
</p>

<p>
  <strong>Description:</strong>
  <%= simple_format(@question.description) %>
</p>

<p>
<strong>Options:</strong><br/>
  <%= render 'options' %>
</p>
<p>


<%= link_to 'Edit', edit_exam_question_path(@exam, @question) %> |
<%= link_to 'Delete', exam_question_path(@exam,question), method: :delete, data: { confirm: 'Are you sure?' } %> |
<br /> 
<% end %>
<div id="IndexNavigation">
<%= link_to 'Back', exams_path %> |
<%= link_to 'New Question', new_exam_question_path(@exam) %>
</div>
</p>
